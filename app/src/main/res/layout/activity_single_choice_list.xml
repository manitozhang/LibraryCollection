<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list.singlechoice.SingleChoiceListActivity">

    <com.common.weight.CommonRecyclerView
        android:id="@+id/rv_single_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/bg_circle_float_button"
        android:onClick="btnGetSingleData"
        android:text="获取选中" />
</RelativeLayout>